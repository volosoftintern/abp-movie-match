@page
@using Microsoft.AspNetCore.Mvc.Localization
@using MovieMatch.Localization
@inject IHtmlLocalizer<MovieMatchResource> L

@model MovieMatch.Web.Pages.Search.IndexModel
@section styles{
    <abp-style src="/Pages/Search/Index.css"/>
}
@section scripts{
 
    <abp-script src="/Pages/Search/Index.js" />
}


<div class="container d-flex align-items-center flex-column">
    <form id="searchMovieForm" class="form-inline my-2 my-lg-0 d-flex w-100 ">

      <input id="movie-name" class="form-control mx-2" type="search" placeholder="Search" name="name" aria-label="Search">
      
      <button id="search-movie" class="btn btn-outline-success my-2 my-sm-0" type="submit">@L["Search"]</button>

    </form>

    
    <div class="spinner-border loader" role="status">
            <span class="sr-only">@L["Loading"]</span>
        </div>
    <h2 class="movie-list-title">@L["PopularMovies"]</h2>

    <div id="movie-list" class="d-flex flex-wrap justify-content-around">
        
    </div>
    <div id="pagination-popular"></div>
    <div id="pagination-search"></div>
</div>
