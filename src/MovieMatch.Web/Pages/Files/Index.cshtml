@page
@model MovieMatch.Web.Pages.Files.Index

@section scripts{
    <abp-script src="/Pages/Files/Index.js" />
}


<abp-card>
    <abp-card-header>
        <h3>File Upload and Download</h3>
    </abp-card-header>
    <abp-card-body>
        <abp-row>
            <abp-column>
                <h3>Upload File</h3>
                <hr />
                <form method="post" enctype="multipart/form-data">
@*                    <abp-input asp-for="UploadFileDto.Name"></abp-input>*@

                    <abp-input asp-for="UploadFileDto.File"></abp-input>

                    <button id="upload"
                        type="button" class="btn btn-info"> Upload</button>
                </form>
            </abp-column>

            <abp-column style="border-left: 1px dotted gray">
                <h3>Download File</h3>
                <hr />
            </abp-column>
        </abp-row>
    </abp-card-body>
</abp-card>