@page
@model MovieMatch.Web.Pages.UserConnections.IndexModel
@inject ICurrentUser currentUser
@using Microsoft.Extensions.Localization
@using MovieMatch.Localization
@using Volo.Abp.Users
@using Volo.Abp.Data
@inject IStringLocalizer<MovieMatchResource> L
@{
    var photoPath="https://cdn.pixabay.com/photo/2015/10/05/22/37/blank-profile-picture-973460_1280.png";
    if(Model.path!=null)
    {
         photoPath = ("/images/host/my-file-container/"+(@Model.path))    ;

    }
    
}
@section scripts
{
    <abp-script src="/Pages/UserConnections/Index.js" />
    <abp-script src="/Pages/Files/Index.js" />
}

@section styles{
    <abp-style src="/Pages/UserConnections/Index.css" />

}

  
<div class="container">
    <div class="row">
        <div class="col-xl-5">
            <div class="card" style="width:1200px">
                <div class="card-body">
                    <div class="dropdown float-end">
                        <a href="#" class="dropdown-toggle arrow-none card-drop" data-bs-toggle="dropdown" aria-expanded="false">
                            <i class="mdi mdi-dots-vertical"></i>
                        </a>
                      

                    </div>
                    <div class="d-flex align-items-start">
                        <form method="post" id="MyGreatFileUploadForm" enctype="multipart/form-data">
                            
                        <input type="file" id="UploadFileDto_File" asp-for="UploadFileDto.File" class="rounded-circle avatar-lg img-thumbnail"  style="display:none; alt="profile-image"/>
                        
                        <img id="img" src="@photoPath" class="rounded-circle avatar-lg img-thumbnail" alt="profile-image" />
                        
                        <button id="upload"  type="submit"></button>
                </form>
                       
                        <div class="w-100 ms-3">
                            <h4 class="my-0" id="username">@Model.UserName</h4>
                            <button type="button" class="btn btn-soft-primary btn-xs waves-effect mb-2 waves-light">Follow</button>
                            <button type="button" class="btn btn-soft-success btn-xs waves-effect mb-2 waves-light">Message</button>
                        </div>
                    </div>

                    <div class="mt-3">
                        <h4 class="font-13 text-uppercase">About Me :</h4>
                       
                                                
            </div> <!-- end card -->

            <div class="card">
                <div class="card-body text-center">


                    <div class="row">
                        <div class="col-4 border-end border-light">
                                        <abp-button id="showFollowers" data-name="@Model.UserName" class="text-muted mt-1 mb-2 fw-normal">Followers</abp-button>


                            <h2 id=followers class="mb-0 fw-bold">@Model.FollowersCount</h2>
                        </div>
                        <div class="col-4 border-end border-light">
                            <abp-button id="showFollowing" data-name="@Model.UserName" class="text-muted mt-1 mb-2 fw-normal">Following</abp-button>
                            <h2 id="following" class="mb-0 fw-bold">@Model.FollowingCount</h2>
                        </div>
                        
                    </div>
                </div>
            </div>








                        





